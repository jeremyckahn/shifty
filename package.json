{
  "name": "shifty",
  "version": "3.0.6",
  "homepage": "http://jeremyckahn.github.io/shifty/doc/",
  "author": "Jeremy Kahn <jeremyckahn@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/jeremyckahn/shifty.git"
  },
  "description": "The fastest JavaScript animation engine on the web",
  "engines": {
    "node": "22.18.0"
  },
  "browser": "./dist/shifty.js",
  "main": "./dist/shifty.node.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "node": "./dist/shifty.node.js",
    "browser": "./dist/shifty.js",
    "default": "./dist/shifty.js",
    "unpkg": "./dist/shifty.js"
  },
  "devDependencies": {
    "@knodes/typedoc-plugin-pages": "^0.23.4",
    "@types/bluebird": "^3.5.38",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vitest/ui": "^1.3.1",
    "@vitest/coverage-v8": "^1.3.1",
    "bluebird": "^3.5.3",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vitest-globals": "^1.5.0",
    "husky": "^1.3.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "serve": "^14.1.2",
    "typedoc": "^0.23.28",
    "typedoc-plugin-mdn-links": "^3.0.3",
    "typescript": "^4.9.5",
    "vite": "^5.2.6",
    "vite-plugin-dts": "^3.7.3",
    "vitest": "^1.3.1",
    "jsdom": "^24.0.0",
    "@types/node": "^20.12.7"
  },
  "scripts": {
    "build": "npm run build:browser && npm run build:node",
    "build:browser": "vite build --mode browser",
    "build:node": "vite build --mode node",
    "typegen": "tsc",
    "typegen:watch": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "ci": "npm run lint && vitest run --reporter=default --reporter=junit --coverage && tsc",
    "doc": "typedoc src/index.ts",
    "doc:view": "serve dist/doc",
    "doc:watch": "nodemon --exec \"npm run doc\" --watch src --watch ./ --ext ts,js,json,md --ignore dist",
    "doc:live": "run-p doc:watch doc:view",
    "lint": "eslint src vite.config.ts",
    "deploy-docs": "npm run build && npm run doc && gh-pages -d dist",
    "preversion": "npm run ci",
    "postversion": "git push && git push --tags",
    "prettier": "prettier 'src/**/*.ts' vite.config.ts --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run ci"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "license": "MIT",
  "optionalDependencies": {
    "fsevents": "^2.3.2"
  }
}
